				<data
					android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\.swb"/>

				<data
					android:pathPattern=".*\\.txt"/>

				<data
					android:pathPattern=".*\\..*\\.txt"/>

				<data
					android:pathPattern=".*\\..*\\..*\\.txt"/>

				<data
					android:pathPattern=".*\\..*\\..*\\..*\\.txt"/>

				<data
					android:pathPattern=".*\\..*\\..*\\..*\\..*\\.txt"/>

				<data
					android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\.txt"/>

				<data
					android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\.txt"/>

				<data
					android:pathPattern=".*\\.java"/>

				<data
					android:pathPattern=".*\\..*\\.java"/>

				<data
					android:pathPattern=".*\\..*\\..*\\.java"/>

				<data
					android:pathPattern=".*\\..*\\..*\\..*\\.java"/>

				<data
					android:pathPattern=".*\\..*\\..*\\..*\\..*\\.java"/>

				<data
					android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\.java"/>

				<data
					android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\..*\\.java"/>

				<data
					android:pathPattern=".*\\.xml"/>

				<data
					android:pathPattern=".*\\..*\\.xml"/>

				<data
					android:pathPattern=".*\\..*\\..*\\.xml"/>

				<data
					android:pathPattern=".*\\..*\\..*\\..*\\.xml"/>

				<data
					android:pathPattern=".*\\..*\\..*\\..*\\..*\\.xml"/>

				<data
